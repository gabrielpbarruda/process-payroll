root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{properties,java}]
indent_size = 2
continuation_indent_size = 2

[*.xml]
indent_size = 2
continuation_indent_size = 2

[*.yml]
indent_size = 2
continuation_indent_size = 2

[Dockerfile]
indent_size = 2
continuation_indent_size = 2
